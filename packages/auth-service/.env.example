# Auth Service Environment Variables
# Copy this file to .env and fill in the values

# Server Configuration
PORT=3001
NODE_ENV=development

# Google OAuth Configuration
# Get these from: Google Cloud Console -> APIs & Services -> Credentials -> OAuth 2.0 Client IDs
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# JWT Configuration
# Generate a strong secret: openssl rand -hex 32
# REQUIRED in production, auto-generated in development if not set
JWT_SECRET=your-jwt-secret-at-least-32-characters
JWT_ISSUER=auth.nullplatform.com
JWT_AUDIENCE=llm-gateway.nullplatform.com
JWT_EXPIRES_IN=1h

# AWS DynamoDB Configuration
# Create table with: pk (String) partition key, sk (String) sort key
# GSI1: gsi1pk (String) partition key, gsi1sk (String) sort key (for user email lookups)
# GSI2: gsi2pk (String) partition key, gsi2sk (String) sort key (for listing user's API keys)
# GSI3: gsi3pk (String) partition key, gsi3sk (String) sort key (for API key validation)
AWS_REGION=us-east-1
DYNAMODB_TABLE=nullplatform-auth
# Optional: For local development with DynamoDB Local
# DYNAMODB_ENDPOINT=http://localhost:8000

# Portal Configuration
# URL where the admin portal is hosted (for redirects after login)
PORTAL_URL=http://localhost:3000

# Domain Restriction
# Only users with email addresses from this domain can log in
ALLOWED_DOMAIN=nullplatform.io
